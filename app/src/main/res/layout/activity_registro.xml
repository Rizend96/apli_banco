<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogin"
            android:layout_below="@id/tvtitulo"
            android:src="@drawable/ic_add_person"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tvtitulo"
            android:text="Registro"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etNombre"
            android:hint="Ingrese su nombre completo"
            android:inputType="text"
            android:layout_below="@id/imgLogin"
            android:background="@drawable/fondo_inputs"
            android:elevation="8dp"
            android:layout_marginTop="50dp"
            android:paddingHorizontal="5dp"
            android:drawableStart="@drawable/ic_person_black"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/etID"
            android:hint="Ingrese su documento"
            android:inputType="number"
            android:layout_below="@id/etNombre"
            android:background="@drawable/fondo_inputs"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="5dp"
            android:drawableStart="@drawable/ic_badge_black"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/etEmailR"
            android:hint="Ingrese el Email"
            android:inputType="textEmailAddress"
            android:layout_below="@id/etID"
            android:background="@drawable/fondo_inputs"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="5dp"
            android:drawableStart="@drawable/ic_email_black"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/etPassR"
            android:hint="Ingrese la contraseÃ±a"
            android:inputType="textPassword"
            android:layout_below="@id/etEmailR"
            android:background="@drawable/fondo_inputs"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="5dp"
            android:drawableStart="@drawable/ic_password_black"
            android:drawablePadding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_below="@id/etPassR"
            android:text="Registrarse"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btnVolver"
            android:layout_below="@id/btnRegistrar"
            android:backgroundTint="@color/cardview_light_background"
            android:background="@drawable/fondo_inputs"
            android:text="Regresar"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </RelativeLayout>



</ScrollView>